@model HeroEditViewModel
<div class="row orderForm">

    <form asp-controller="Hero" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Update hero</h3>
        @Html.HiddenFor(m => Model.Hero.HeroId)
        <div class="form-group">
            <label asp-for="Hero.Power" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Hero.PowerId,
                                        new SelectList(Model.Powers.Select(x => new { Value = x.PowerId, Text = x.Name }), "Value", "Text"),
                                        htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hero.Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Hero.Name" class="form-control" placeholder="Enter customers name" />
                <span asp-validation-for="Hero.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Hero" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
</div>
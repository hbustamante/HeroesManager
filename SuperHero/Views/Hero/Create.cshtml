@model HeroEditViewModel
<div class="row orderForm">
    <form asp-controller="Hero" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Create new hero</h3>


        <div class="form-group">
            <label asp-for="Hero.Power" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.Hero.PowerId,
                             new SelectList(Model.Powers.Select(x => new { Value = x.PowerId, Text = x.Name }), "Value", "Text"), "Select an power",
                             htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Hero.Power" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <a class="btn btn-success" style="width:100%" asp-controller="Power" asp-action="Create">Create an power</a>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Hero.Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Hero.Name" class="form-control" placeholder="Enter customers name" />
                <span asp-validation-for="Hero.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Hero" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>
@model SuperHero.ViewModels.HomeViewModel
@{
    int availableHeros = Model.HerosCount;
}

<h1>Heros dashboard</h1>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Powers Count
            </div>
            <div class="panel-body">
                There are @Model.PowersCount powers
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Heros count
            </div>
            <div class="panel-body">
                There are @availableHeros Heros available out of @Model.HerosCount Heros
            </div>
        </div>
    </div>
</div>
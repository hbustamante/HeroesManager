@model SuperHero.ViewModels.HomeViewModel
@{
    int availableHeroes = Model.HeroesCount;
}

<h1>Heroes dashboard</h1>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Houses Count
            </div>
            <div class="panel-body">
                There are @Model.HousesCount houses
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Powers Count
            </div>
            <div class="panel-body">
                There are @Model.PowersCount powers
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Heroes count
            </div>
            <div class="panel-body">
                There are @availableHeroes heroes available out of @Model.HeroesCount heroes
            </div>
        </div>
    </div>
</div>